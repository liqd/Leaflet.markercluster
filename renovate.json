{
  "extends": [
    "config:base"
  ],

  "dependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },
  "devDependencies": {
    "updateTypes": ["minor", "patch"],
    "automerge": true
  },

  "digest": {
    "enabled": false
  },

  "labels": [
    "renovate"
  ],

  "packageRules": [
      {
        "packagePatterns": ["^eslint"],
        "groupName": "eslint packages"
      },
      {
        "matchPackageNames": ["mocha"],
        "allowedVersions": "<6.2.3"
      },
      {
        "matchPackageNames": ["rollup"],
        "allowedVersions": "<3.0.0"
      }

    ]
}
